// Jenkinsfile
pipeline {
  agent any

  environment {
    // Define any environment variables needed
    DOCKER_BUILDKIT = "1"  // Enable Docker BuildKit for better performance
  }

  stages {
    stage('Pull Code') {
      steps {
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Build Docker Image') {
      steps {
        // Let Docker handle the build with increased memory limits
        sh '''
          docker build \
            --memory=8g \
            --memory-swap=10g \
            --build-arg NODE_OPTIONS="--max-old-space-size=4096" \
            -t home-frontend .
        '''
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-frontend-1 || true
          docker rm   home-frontend-1 || true
          docker run -d --name home-frontend-1 -p 5173:80 home-frontend
        '''
      }
    }
  }

  post {
    failure {
      echo 'Build failed! Check logs for details.'
    }
    success {
      echo 'Build succeeded!'
    }
  }
}
