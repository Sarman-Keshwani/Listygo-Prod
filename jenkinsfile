// Jenkinsfile
pipeline {
  agent any
  
  options {
    // Add timeout to prevent hanging builds
    timeout(time: 30, unit: 'MINUTES')
     // Use maximum survivability so pipeline can resume after Jenkins restarts
    durabilityHint 'MAX_SURVIVABILITY'
    // Preserve stashes and artifacts on failure
    preserveStashes(buildCount: 5)
  }

  environment {
    // Define any environment variables needed
    DOCKER_BUILDKIT = "1"  // Enable Docker BuildKit for better performance
  }

  stages {
    stage('Pull Code') {
      steps {
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh '''
          export BUILD_VERSION=$(date +%s)
          docker build --no-cache -t home-frontend --build-arg BUILD_VERSION=$BUILD_VERSION .
        '''
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-frontend-1 || true
          docker rm   home-frontend-1 || true
          docker run -d --name home-frontend-1 -p 5173:80 home-frontend
        '''
      }
    }
  }

  post {
    failure {
      echo 'Build failed! Check logs for details.'
    }
    success {
      echo 'Build succeeded!'
    }
  }
}
