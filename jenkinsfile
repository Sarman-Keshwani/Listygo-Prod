// Jenkinsfile
pipeline {
  agent any

  environment {
    // optional: persist npm cache between builds
    NPM_CACHE = "${HOME}/.npm"
    // Set Node options to reduce memory usage
    NODE_OPTIONS = "--max-old-space-size=4096"
  }

  stages {
    stage('Pull Code') {
      steps {
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Install & Build') {
      steps {
        // Install dependencies with --production flag
        sh "docker run --rm -v ${WORKSPACE}:/app -v ${NPM_CACHE}:/root/.npm -w /app -e NODE_OPTIONS='--max-old-space-size=4096' --memory=6g node:18 npm ci --production=false"
        
        // Build with increased memory limit
        sh "docker run --rm -v ${WORKSPACE}:/app -v ${NPM_CACHE}:/root/.npm -w /app -e NODE_OPTIONS='--max-old-space-size=4096' --memory=6g node:18 npm run build"
      }
    }

    stage('Build Docker Image') {
      steps {
        // this now only packages your built /dist folder
        sh 'docker build -t home-frontend .'
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-frontend-1 || true
          docker rm   home-frontend-1 || true
          docker run -d --name home-frontend-1 -p 5173:80 home-frontend
        '''
      }
    }
  }
}
