pipeline {
  agent any
  options {
    skipDefaultCheckout()
    // Keep last 5 builds’ workspaces around
    preserveStashes(buildCount: 5)
    timeout(time: 20, unit: 'MINUTES')
  }

  stages {
    stage('Clean & Checkout') {
      steps {
        cleanWs()
        checkout scm
      }
    }

    stage('Install & Build') {
      steps {
        sh 'npm ci'
        sh 'npm run build'
      }
    }

    stage('Docker Build & Deploy') {
      steps {
        sh '''
          # build Docker image
          docker build -t vite-app .

          # tear down any existing container
          docker rm -f vite-app || true

          # run new container, serving the built files
          docker run -d \
            --name vite-app \
            -p 5173:80 \
            vite-app
        '''
      }
    }
  }

  post {
    success {
      echo "✅ Vite app built & deployed successfully!"
    }
    failure {
      echo "❌ Something went wrong — check the logs above."
    }
    always {
      // clean up dangling images
      sh 'docker image prune -f'
    }
  }
}
