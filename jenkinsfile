pipeline {
  agent any

  stages {
    stage('Pull Code') {
      steps {
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Install & Build') {
      // Run this whole stage in a Node.js container
      agent {
        docker {
          image 'node:18'
          // Persist npm cache between builds (optional)
          args  '-v $HOME/.npm:/root/.npm'
        }
      }
      steps {
        // Ensure weâ€™re in the workspace root
        sh 'npm ci'
        sh 'npm run build'
      }
    }

    stage('Build Docker Image') {
      steps {
        // Now that dist/ exists, this is lightning-fast
        sh 'docker build -t home-frontend .'
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-frontend-1 || true
          docker rm   home-frontend-1 || true
          docker run -d --name home-frontend-1 -p 5173:80 home-frontend
        '''
      }
    }
  }
}
