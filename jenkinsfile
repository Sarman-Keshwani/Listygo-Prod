// Jenkinsfile
pipeline {
  agent any

  environment {
    // optional: persist npm cache between builds
    NPM_CACHE = "${HOME}/.npm"
  }

  stages {
    stage('Pull Code') {
      steps {
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Install & Build') {
      steps {
        // Replace the docker pipeline plugin syntax with direct shell commands
        sh "docker run --rm -v ${WORKSPACE}:/app -v ${NPM_CACHE}:/root/.npm -w /app node:18 npm ci"
        sh "docker run --rm -v ${WORKSPACE}:/app -v ${NPM_CACHE}:/root/.npm -w /app node:18 npm run build"
      }
    }

    stage('Build Docker Image') {
      steps {
        // this now only packages your built /dist folder
        sh 'docker build -t home-frontend .'
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-frontend-1 || true
          docker rm   home-frontend-1 || true
          docker run -d --name home-frontend-1 -p 5173:80 home-frontend
        '''
      }
    }
  }
}
