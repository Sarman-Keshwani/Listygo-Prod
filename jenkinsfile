pipeline {
  agent any
  options {
    timeout(time: 15, unit: 'MINUTES')
    skipDefaultCheckout()
  }

  stages {
    stage('Clean & Checkout') {
      steps {
        deleteDir()
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'
      }
    }

    stage('Build Frontend') {
      steps {
        // Use the official Node image to compile your React app
        sh '''
          docker run --rm \
            -v "$PWD":/app \
            -w /app \
            node:20-slim \
            sh -c "npm ci && npm run build"
        '''
        stash name: 'frontend-dist', includes: 'dist/**'
      }
    }

    stage('Deploy Static via Nginx') {
      steps {
        unstash 'frontend-dist'
        sh '''
          docker rm -f home-frontend-1 || true
          docker run -d \
            --name home-frontend-1 \
            -p 5173:80 \
            -v "$PWD/dist":/usr/share/nginx/html:ro \
            nginx:stable-alpine
        '''
      }
    }
  }

  post {
    success { echo '✅ Frontend built & deployed successfully!' }
    failure { echo '❌ Frontend build or deploy failed—check above.' }
  }
}
