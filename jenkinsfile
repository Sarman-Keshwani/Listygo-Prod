pipeline {
  agent any

  options {
    timeout(time: 15, unit: 'MINUTES')    // shorter since we won’t docker-build
    skipDefaultCheckout()                 // we’ll do it manually
  }

  stages {
    stage('Checkout & Build') {
      steps {
        deleteDir()
        git url: 'https://github.com/Sarman-Keshwani/Listygo-Prod.git', branch: 'main'

        // Install deps & build on the agent
        sh '''
          npm ci
          npm run build
        '''
        // dist/ now contains your production bundle
      }
    }

    stage('Deploy Static via Nginx') {
      steps {
        sh '''
          # Tear down any old container on 5173
          docker rm -f home-frontend-1 || true

          # Run Nginx, mounting dist/ into its html dir
          docker run -d \
            --name home-frontend-1 \
            -p 5173:80 \
            -v "$PWD/dist":/usr/share/nginx/html:ro \
            nginx:stable-alpine
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Frontend built and deployed in under a minute!'
    }
    failure {
      echo '❌ Something went wrong—check the logs above.'
    }
  }
}
